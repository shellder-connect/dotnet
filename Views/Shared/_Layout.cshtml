<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shellder Connection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Radley:wght@400;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-green: #3c8377;
            --medium-green: #0c6156;
            --dark-green: #004034;
            --darker-green: #002820;
            --accent-light: #5aa49a;
            --text-light: #e8f5f3;
            --gradient-main: linear-gradient(135deg, #3c8377 0%, #0c6156 50%, #004034 100%);
            --gradient-dark: linear-gradient(135deg, #004034 0%, #002820 100%);
            --gradient-reverse: linear-gradient(135deg, #002820 0%, #004034 50%, #0c6156 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--darker-green);
            color: var(--text-light);
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .radley-regular {
            font-family: 'Radley', Georgia, serif;
        }

        /* Header/Navbar Styles */
        .navbar {
            background: var(--gradient-main) !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3) !important;
            padding: 1rem 0;
            backdrop-filter: blur(10px);
        }

        .navbar-brand {
            color: white !important;
            font-weight: 700;
            font-size: 1.5rem;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        .navbar-brand:hover {
            color: var(--text-light) !important;
            transform: translateY(-1px);
        }

        .navbar-toggler {
            border: 2px solid rgba(255, 255, 255, 0.3);
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        .navbar-toggler:focus {
            box-shadow: 0 0 0 0.25rem rgba(255, 255, 255, 0.2);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            padding: 0.7rem 1.2rem !important;
            border-radius: 25px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .nav-link:hover {
            color: white !important;
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .nav-link:hover::before {
            left: 100%;
        }

        /* Main Content Styles */
        .container {
            flex: 1;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        main {
            background: rgba(60, 131, 119, 0.05);
            border-radius: 20px;
            padding: 3rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(60, 131, 119, 0.1);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            min-height: 500px;
        }

        /* Typography */
        h1, h2, h3, h4, h5, h6 {
            color: var(--primary-green);
            margin-bottom: 1.5rem;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--accent-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        p {
            color: rgba(232, 245, 243, 0.9);
            line-height: 1.7;
        }

        /* Buttons */
        .btn-primary {
            background: var(--gradient-main);
            border: none;
            border-radius: 25px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(60, 131, 119, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(60, 131, 119, 0.4);
            background: var(--gradient-reverse);
        }

        .btn-secondary {
            background: transparent;
            border: 2px solid var(--primary-green);
            color: var(--primary-green);
            border-radius: 25px;
            padding: 0.8rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background: var(--primary-green);
            color: white;
            transform: translateY(-2px);
        }

        /* Cards */
        .card {
            background: linear-gradient(135deg, rgba(60, 131, 119, 0.1) 0%, rgba(12, 97, 86, 0.05) 100%);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(60, 131, 119, 0.2);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            border-color: var(--primary-green);
        }

        .card-header {
            background: var(--gradient-main);
            border-bottom: none;
            color: white;
            font-weight: 600;
        }

        /* Tables */
        .table {
            color: var(--text-light);
            background: transparent;
        }

        .table th {
            border-color: rgba(60, 131, 119, 0.3);
            color: var(--primary-green);
            font-weight: 600;
        }

        .table td {
            border-color: rgba(60, 131, 119, 0.2);
            color: rgba(232, 245, 243, 0.9);
        }

        .table-hover tbody tr:hover {
            background: rgba(60, 131, 119, 0.1);
        }

        /* Forms */
        .form-control, .form-select {
            background: rgba(60, 131, 119, 0.05);
            border: 1px solid rgba(60, 131, 119, 0.3);
            color: var(--text-light);
            border-radius: 10px;
        }

        .form-control:focus, .form-select:focus {
            background: rgba(60, 131, 119, 0.1);
            border-color: var(--primary-green);
            box-shadow: 0 0 0 0.2rem rgba(60, 131, 119, 0.25);
            color: var(--text-light);
        }

        .form-label {
            color: var(--primary-green);
            font-weight: 500;
        }

        /* Footer */
        footer {
            background: var(--gradient-dark) !important;
            color: var(--text-light);
            padding: 2rem 0;
            margin-top: auto;
            border-top: 1px solid rgba(60, 131, 119, 0.2);
        }

        footer a {
            color: var(--primary-green);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: var(--accent-light);
        }

        /* Alerts */
        .alert-success {
            background: linear-gradient(135deg, rgba(60, 131, 119, 0.1) 0%, rgba(90, 164, 154, 0.1) 100%);
            border: 1px solid var(--primary-green);
            color: var(--text-light);
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(220, 53, 69, 0.05) 100%);
            border: 1px solid #dc3545;
            color: var(--text-light);
        }

        .alert-warning {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 193, 7, 0.05) 100%);
            border: 1px solid #ffc107;
            color: var(--text-light);
        }

        .alert-info {
            background: linear-gradient(135deg, rgba(13, 202, 240, 0.1) 0%, rgba(13, 202, 240, 0.05) 100%);
            border: 1px solid #0dcaf0;
            color: var(--text-light);
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            main {
                padding: 2rem 1rem;
                margin: 1rem;
            }

            h1 {
                font-size: 2rem;
            }

            .navbar-brand {
                font-size: 1.3rem;
            }
        }

        /* Scrollbar customization */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--darker-green);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-green);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--accent-light);
        }

        /* Loading animations */
        .fade-in {
            animation: fadeIn 0.6s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a class="navbar-brand radley-regular" asp-area="" asp-controller="Home" asp-action="Inicio">
                    <i class="fas fa-shield-alt me-2"></i>
                    Shellder Connection
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link radley-regular" asp-area="" asp-controller="Home" asp-action="Inicio">
                                <i class="fas fa-home me-1"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link radley-regular" href="/swagger">
                                <i class="fas fa-code me-1"></i>
                                API
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link radley-regular" href="https://youtu.be/zA-uwZe2gFY?si=eYdUpa-6DzuRlZrz" target="_blank" rel="noopener noreferrer">
                                <i class="fas fa-play me-1"></i>
                                Solução
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link radley-regular" asp-area="" asp-controller="Database" asp-action="Index">
                                <i class="fas fa-download me-1"></i>
                                Database
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link radley-regular" asp-area="" asp-controller="FeedbackAnalytics" asp-action="Index">
                                <i class="fas fa-chart-pie me-1"></i>
                                IOT - Feedbacks
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link radley-regular" asp-area="" asp-controller="DashboardML" asp-action="Index">
                                <i class="fas fa-chart-bar me-1"></i>
                                IOT - Projeção
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link radley-regular" asp-area="" asp-controller="Localidade" asp-action="Index">
                                <i class="fas fa-map-marked-alt me-1"></i>
                                Localização
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link radley-regular" asp-area="" asp-controller="ProximidadeView" asp-action="Index">
                                <i class="fas fa-crosshairs me-1"></i>
                                Proximidade Abrigos
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 fade-in">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container text-center">
            <p class="mb-2">
                <i class="fas fa-shield-alt me-2"></i>
                © 2024 - Shellder Connection - 
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
            </p>
            <p class="small text-muted">
                Transformando smartphones em ferramentas de esperança
            </p>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Smooth transitions and interactions
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth scroll behavior
            document.documentElement.style.scrollBehavior = 'smooth';
            
            // Add loading animation to main content
            const main = document.querySelector('main');
            if (main) {
                main.classList.add('fade-in');
            }
            
            // Enhanced navbar interactions
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                link.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>