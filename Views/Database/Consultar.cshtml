@model List<object>

@{
    ViewData["Title"] = "Consultar Cole√ß√£o";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome para √≠cones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .main-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border: none;
        }
        .header-info {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            border-radius: 15px 15px 0 0;
        }
        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }
        .form-control:focus, .form-select:focus {
            border-color: #17a2b8;
            box-shadow: 0 0 0 0.2rem rgba(23, 162, 184, 0.25);
        }
        .btn-info {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(23, 162, 184, 0.4);
        }
        .btn-outline-secondary {
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .table-custom {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .table-custom thead {
            background: linear-gradient(135deg, #343a40 0%, #495057 100%);
            color: white;
        }
        .table-custom tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }
        .table-custom tbody tr:hover {
            background-color: #e3f2fd !important;
            transition: all 0.2s ease;
        }
        .json-content {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 10px;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
            max-height: 300px;
            overflow-y: auto;
            white-space: pre-wrap;
            word-break: break-all;
        }
        .icon-large {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }
        .results-summary {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                
                <!-- Card Principal -->
                <div class="card main-card">
                    <!-- Header -->
                    <div class="card-header header-info text-white text-center py-4">
                        <div class="icon-large">
                            <i class="fas fa-search"></i>
                        </div>
                        <h2 class="mb-0 fw-bold">Consultar Documentos</h2>
                        <p class="mb-0 opacity-75">Explore os dados das suas cole√ß√µes</p>
                    </div>

                    <!-- Body -->
                    <div class="card-body p-4">
                        <!-- Formul√°rio de Consulta -->
                        <div class="row justify-content-center mb-4">
                            <div class="col-lg-6">
                                <form method="POST">
                                    @Html.AntiForgeryToken()
                                    
                                    <div class="row">
                                        <div class="col-md-8 mb-3">
                                            <label for="collection_select" class="form-label fw-bold">
                                                <i class="fas fa-database me-2 text-info"></i>
                                                Selecione a cole√ß√£o:
                                            </label>
                                            <select name="collection_select" id="collection_select" class="form-select" required>
                                                <option value="">-- Escolha uma cole√ß√£o --</option>
                                                @{
                                                    var selectedCollection = ViewBag.Collection as string;
                                                }
                                                <option value="t_usuario" selected="@(selectedCollection == "t_usuario" ? "selected" : null)">üë§ Usu√°rios</option>
                                                <option value="t_tipo_usuario" selected="@(selectedCollection == "t_tipo_usuario" ? "selected" : null)">üè∑Ô∏è Tipos de usu√°rio</option>
                                                <option value="t_categoria" selected="@(selectedCollection == "t_categoria" ? "selected" : null)">üìÅ Categorias</option>
                                                <option value="t_localidade" selected="@(selectedCollection == "t_localidade" ? "selected" : null)">üìç Localidades</option>
                                                <option value="t_feedback" selected="@(selectedCollection == "t_feedback" ? "selected" : null)">üí¨ Feedbacks</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="limit" class="form-label fw-bold">
                                                <i class="fas fa-list-ol me-2 text-info"></i>
                                                Quantidade:
                                            </label>
                                            <select name="limit" id="limit" class="form-select">
                                                <option value="5" selected="@(ViewBag.Limit == 5 ? "selected" : null)">5 registros</option>
                                                <option value="10" selected="@(ViewBag.Limit == 10 ? "selected" : null)">10 registros</option>
                                                <option value="20" selected="@(ViewBag.Limit == 20 ? "selected" : null)">20 registros</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <button type="submit" class="btn btn-info text-white">
                                            <i class="fas fa-search me-2"></i>
                                            Consultar Dados
                                        </button>
                                        <a href="@Url.Action("Index", "Database")" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-2"></i>
                                            Voltar
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Resultados -->
                        @if (Model != null && Model.Any())
                        {
                            <!-- Sum√°rio dos Resultados -->
                            <div class="results-summary">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h5 class="mb-1">
                                            <i class="fas fa-check-circle me-2"></i>
                                            Consulta realizada com sucesso!
                                        </h5>
                                        <p class="mb-0">
                                            Encontrados <strong>@ViewBag.Count</strong> documentos na cole√ß√£o <strong>@ViewBag.Collection</strong>
                                            @if (ViewBag.Limit != null)
                                            {
                                                <span>(limitado a @ViewBag.Limit registros)</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <i class="fas fa-database fa-2x opacity-75"></i>
                                    </div>
                                </div>
                            </div>

                            <!-- Tabela de Resultados -->
                            <div class="table-responsive">
                                <table class="table table-custom table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%;">#</th>
                                            <th style="width: 20%;">ID do Documento</th>
                                            <th style="width: 75%;">Dados do Documento</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int counter = 1;}
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text-center">
                                                    <span class="badge bg-info">@counter</span>
                                                </td>
                                                <td>
                                                    @if (item is Dictionary<string, object> dict && dict.ContainsKey("_id"))
                                                    {
                                                        <code class="text-primary">@dict["_id"]</code>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">N/A</small>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="json-content">@System.Text.Json.JsonSerializer.Serialize(item, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</div>
                                                </td>
                                            </tr>
                                            counter++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else if (ViewBag.Collection != null)
                        {
                            <!-- Estado Vazio -->
                            <div class="empty-state">
                                <i class="fas fa-inbox"></i>
                                <h4>Nenhum documento encontrado</h4>
                                <p>A cole√ß√£o <strong>@ViewBag.Collection</strong> n√£o cont√©m documentos ou est√° vazia.</p>
                                <div class="mt-3">
                                    <a href="@Url.Action("Importar", "Database")" class="btn btn-outline-primary">
                                        <i class="fas fa-upload me-2"></i>
                                        Importar Dados
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Estado Inicial -->
                            <div class="empty-state">
                                <i class="fas fa-search"></i>
                                <h4>Pronto para consultar</h4>
                                <p>Selecione uma cole√ß√£o acima e clique em "Consultar Dados" para visualizar os documentos.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Auto-focus no select
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('collection_select').focus();
        });

        // Anima√ß√£o no bot√£o
        document.querySelector('button[type="submit"]').addEventListener('click', function(e) {
            if (this.closest('form').checkValidity()) {
                this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Consultando...';
                this.disabled = true;
            }
        });

        // Expandir/contrair JSON
        document.querySelectorAll('.json-content').forEach(function(element) {
            element.addEventListener('click', function() {
                this.classList.toggle('expanded');
                if (this.style.maxHeight === 'none') {
                    this.style.maxHeight = '300px';
                } else {
                    this.style.maxHeight = 'none';
                }
            });
        });
    </script>
</body>
</html>