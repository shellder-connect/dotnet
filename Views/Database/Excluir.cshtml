@{
    ViewData["Title"] = "Excluir Documento";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h2>Excluir Documento</h2>
    <form method="POST" id="excluir-form">
        @Html.AntiForgeryToken()
        
        <label for="collection_excluir">Coleção:</label>
        <select name="collection_excluir" id="collection_excluir" required>
            <option value="t_usuario">Usuário</option>
            <option value="t_tipo_usuario">Tipo de Usuário</option>
            <option value="t_categoria">Consulta</option>
        </select><br><br>
        
        <label for="id_excluir">ID do Documento:</label>
        <input type="text" name="id_excluir" id="id_excluir" placeholder="Ex: 661e4bd43d7c2dd46df5f3e2" required><br><br>
        
        <button type="submit">Excluir</button>
    </form>
    
    @if (TempData["Message"] != null)
    {
        <p style="color: green; font-weight: bold;">@TempData["Message"]</p>
        <script>
            // Limpar formulário após sucesso
            document.addEventListener('DOMContentLoaded', function() {
                document.getElementById('excluir-form').reset();
            });
        </script>
    }
    
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
    
    <a href="@Url.Action("Index", "Database")">Voltar ao Início</a>
</body>
</html>